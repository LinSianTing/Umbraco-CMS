@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "GF_layout.cshtml";
}

<!-- page-title -->
<div class="ttm-page-title-row">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-box">
                    <div class="page-title-heading">
                        <h1 class="title">企業詢價</h1>
                    </div>
                    <!-- /.page-title-captions -->
                    <div class="breadcrumb-wrapper">
                        <span>
                            <a title="Homepage" href="/">首頁</a>
                        </span>
                        <span class="ttm-bread-sep">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </span>
                        <span><span>企業詢價</span></span>
                    </div>
                </div>
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- page-title END-->
<!--site-main start-->
<div class="site-main">
    <!-- contact-section -->
    <section class="ttm-row contact-section clearfix">
        <div class="container">
            <div class="row no-gutters">
                <!-- row -->
                <div class="col-lg-6">
                    <div class="spacing-9">
                        <!-- section title -->
                        <div class="section-title text-left clearfix">
                            <div class="title-header mb-90">
                                <h4 style="color:#C5A572;"><b>@Model.Value("subtitle")</b></h4>
                                <h2 class="title">@Model.Value("title")</h2>
                            </div>
                            <div class="heading-seperator">
                                <span></span>
                            </div>
                        </div>
                        <!-- section title end -->
                        <div id="ttm-quote-form"
                             class="row ttm-quote-form clearfix style2">
                            <div class="col-sm-12 col-md-12">
                                <h5>@Model.Value("description")</h5>
                            </div>
                            <!-- LINE QR Code -->
                            <div class="col-sm-12 col-md-12">
                                <div>
                                    <img src="/tpl/zst_GF/images/contactUs/line-qrcode.png" style="height: 150px;">
                                </div>
                                </br>
                                <h4>LINE ID：@@wanna.eat</h4>
                            </div>
                            <!-- 加入 LINE 線上客服 -->
                            <div class="col-md-12">
                                <div class="form-group text-left">
                                    <a href="https://line.me/zh-hant/" target="_blank">
                                        <button class="ttm-btn ttm-btn-size-md ttm-btn-bgcolor-skincolor">
                                            加入 LINE 線上客服
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <!-- col-bg-img-two -->
                    <div class="ttm-bgcolor-grey ttm-bg ttm-col-bgimage-yes ttm-right-span spacing-10">
                        <div class="ttm-col-wrapper-bg-layer ttm-bg-layer">
                            <div class="ttm-bg-layer-inner"></div>
                        </div>
                        <div class="layer-content">
                            <div class="row">
                                <!-- Phone -->
                                <div class="col-md-12">
                                    <!-- featured-icon-box-->
                                    <div class="featured-icon-box left-icon style4">
                                        <div class="featured-icon">
                                            <!-- featured-icon-->
                                            <div class="ttm-icon ttm-icon_element-background-color-grey ttm-icon_element-size-md ttm-icon_element-style-round">
                                                <i class="ti ti-headphone-alt"></i>
                                            </div>
                                        </div>
                                        <!-- featured-icon -->
                                        <div class="featured-content">
                                            <!-- featured-content -->
                                            <div class="featured-title">
                                                <!-- featured-title -->
                                                <h4>客服電話</h4>
                                            </div>
                                            <div class="featured-desc">
                                                <!-- featured-desc -->
                                                <h5 class="mb-0">
                                                    ＋886 (03) 288 - 8759
                                                    </br>週一至週五 09:00 - 12:00 / 13:00 - 18:00
                                                    </br>(國定假日除外)
                                                </h5>
                                            </div>
                                        </div>
                                        <!-- featured-content -->
                                    </div>
                                    <!-- featured-icon-box end-->
                                </div>

                                <!-- Email -->
                                <div class="col-md-12">
                                    <!-- featured-icon-box-->
                                    <div class="featured-icon-box left-icon style4">
                                        <div class="featured-icon">
                                            <!-- featured-icon-->
                                            <div class="ttm-icon ttm-icon_element-background-color-grey ttm-icon_element-size-md ttm-icon_element-style-round">
                                                <i class="ti ti-email"></i>
                                            </div>
                                        </div>
                                        <!-- featured-icon -->
                                        <div class="featured-content">
                                            <!-- featured-content -->
                                            <div class="featured-title">
                                                <!-- featured-title -->
                                                <h4>Email</h4>
                                            </div>
                                            <div class="featured-desc">
                                                <!-- featured-desc -->
                                                <h3 class="mb-0">
                                                    <a href="mailto:very.wanna.eat@gmail.com" target="_blank">very.wanna.eat@gmail.com</a>
                                                </h3>
                                                </br>
                                                <h5>如您對產品有任何疑問、建議、或是業務、行銷合作等相關需求，歡迎您發送 E-mail。</h5>
                                            </div>
                                        </div>
                                        <!-- featured-content -->
                                    </div>
                                    <!-- featured-icon-box end-->
                                </div>

                                <!-- Address -->
                                <div class="col-md-12">
                                    <!-- featured-icon-box-->
                                    <div class="featured-icon-box left-icon style4">
                                        <div class="featured-icon">
                                            <!-- featured-icon-->
                                            <div class="ttm-icon ttm-icon_element-background-color-grey ttm-icon_element-size-md ttm-icon_element-style-round">
                                                <i class="ti ti-location-pin"></i>
                                            </div>
                                        </div>
                                        <!-- featured-icon -->
                                        <div class="featured-content">
                                            <!-- featured-content -->
                                            <div class="featured-title">
                                                <!-- featured-title -->
                                                <h4>食品工廠地址</h4>
                                            </div>
                                            <div class="featured-desc">
                                                <!-- featured-desc -->
                                                <h5 class="mb-0">
                                                    工廠登記編號：68004814
                                                </h5>
                                                <br />
                                                <h5>
                                                    <a href="https://goo.gl/maps/mgb9CsdeLfGDF7Uq7" target="_blank">
                                                        326 桃園市楊梅區中山北路一段 199 巷 71 號
                                                    </a>
                                                    <br />
                                                    ※ 非實體店面，不對外開放。
                                                </h5>
                                            </div>
                                        </div>
                                        <!-- featured-content -->
                                    </div>
                                    <!-- featured-icon-box end-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- row end-->
        </div>
    </section>
    <!-- contact-section -->
    <!-- map-section -->
    <div class="ttm-row map-section clearfix">
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-md-12">
                    <!--map-start-->
                    <!-- <div class="map-wrapper">
                      <div id="map_canvas"></div>
                    </div> -->
                    <!--map-end-->
                </div>
            </div>
        </div>
    </div>
    <!-- map-section end -->
</div>
<!--site-main end-->
